<%= current_person.full_name if current_person %>

<% if current_person %>
  <%= link_to "Log out", session_path, method: :delete, id: "log_out_link" %>
<% else %>
  <% unless (request.fullpath.match(/login\z/)) || (request.fullpath.match(/register\z/)) %>
    <%= link_to "Log in", login_path %> or <%= link_to "Sign up", register_path %>
  <% end %>
<% end %>

<p><%= link_to "Log in with Facebook", "/auth/facebook" %></p>

